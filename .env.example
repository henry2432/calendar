# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=False
SECRET_KEY=your-secret-key-change-this

# Google Sheets Credentials Path
CREDENTIALS_PATH=/home/kayarine_server/kayarine-webhook/credentials.json

# WhatsApp Configuration
WHATSAPP_API_URL=https://graph.facebook.com/v18.0
WHATSAPP_PHONE_ID=your_phone_id
WHATSAPP_ACCESS_TOKEN=your_access_token
WHATSAPP_VERIFY_TOKEN=your_verify_token

# WooCommerce Configuration
WC_URL=https://kayarine.club
WC_CONSUMER_KEY=your_consumer_key
WC_CONSUMER_SECRET=your_consumer_secret
WC_WEBHOOK_SECRET=your_webhook_secret

# Rate Limiting (Flask-Limiter)
# Format: requests/time_period (e.g., "100/minute", "10/hour")
RATE_LIMIT_WEBHOOK_DEFAULT=100/minute
RATE_LIMIT_API_CHATS=30/minute
RATE_LIMIT_API_MESSAGES=30/minute
RATE_LIMIT_API_AVAILABILITY=10/minute
RATE_LIMIT_API_SEND_MESSAGE=20/minute

# IP Whitelist (comma-separated CIDR ranges)
WHITELIST_WOOCOMMERCE=203.0.113.0/24
WHITELIST_WHATSAPP=31.13.64.0/19

# API Tokens (for /api endpoints)
FRONTEND_API_TOKEN=your_frontend_api_token
INTERNAL_API_TOKEN=your_internal_api_token

# Monitoring and Alerts
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
ENABLE_SUSPICIOUS_IP_ALERTS=True
SUSPICIOUS_REQUEST_THRESHOLD=50
SUSPICIOUS_REQUEST_WINDOW=30

# Logging
LOG_LEVEL=INFO
LOG_FILE=flask.log

# Optional: Request Monitoring
ENABLE_REQUEST_MONITORING=True
ENABLE_CLOUDFLARE_PROTECTION=True
